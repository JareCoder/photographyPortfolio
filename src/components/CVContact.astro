---

<div class="contact-info mb-3 print:mb-2 font-inconsolata">
  <div class="flex flex-wrap gap-x-6 gap-y-3">
    {contacts.map((contact) => (
      <div class="contact-item flex items-center">
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-5 w-5 text-blue-600 mr-2" 
          viewBox={iconPaths[contact.icon]?.viewBox || "0 0 20 20"} 
          fill="currentColor"
        >
          {iconPaths[contact.icon]?.path.map(pathData => (
            <path d={pathData} fill-rule={contact.icon === 'website' ? 'evenodd' : undefined} clip-rule={contact.icon === 'website' ? 'evenodd' : undefined} />
          ))}
        </svg>
        <a 
          href={contact.url} 
          class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 transition font-medium"
        >
          {contact.value}
        </a>
      </div>
    ))}
  </div>
</div>

<style>
  @media print {
    .contact-info {
      margin-bottom: 1rem;
    }
    
    .contact-item a {
      color: #000 !important;
      text-decoration: none !important;
    }
    
    .contact-item svg {
      color: #000 !important;
    }
  }
</style>