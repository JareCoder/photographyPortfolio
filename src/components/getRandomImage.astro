---
const { images, alt, url, tag } = Astro.props;
---
<div id="randomimage" class="relative group border-0" data-images={images} data-alt={alt} >
 <a href={url}>
    <img class="w-full sm:h-[540px] xl:h-[1080px] lg:h-[720px] object-cover object-center " style="object-position: 40% 35%;" />
    <p class="absolute inset-0 flex items-center justify-center text-[rgb(245,245,245)] text-4xl xl:text-6xl">
      {tag}
    </p>
  </a>
   <slot />
</div>
<script src="../scripts/getrandomimage.js" />
<style>
#randomimage p {
  transition: opacity 0.3s ease-in-out;
  opacity: 1;
}

#randomimage p:hover {
  opacity: 0.5;
}
</style>