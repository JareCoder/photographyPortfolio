---
const { title, url, image, alt, description, pubDate } = Astro.props;
import { Image } from "astro:assets";
import Prose from "./Prose.astro";
const publishedDate = pubDate
  .toDateString()
  .split(" ")
  .slice(1)
  .join(" ");
---

<div class="flex flex-col sm:flex-row lg:space-x-14 lg:mb-20 sm:mb-14 gap-8 lg:justify-center lg:mx-24" >
{
  image && (
    <div id="image" class="flex sm:w-1/3 relative lg:h-[480px] h-[360px]" >
      <a href={url}>
        <Image
          src={image}
          alt={alt}
          widths={[360, 720, 1080, 1440, 2160]}
          sizes={`(max-width: 360px) 360px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, (max-width: 2160px) 2160px`}
          width={2560}
          height={1440}
          format="avif"
          decoding="async"
          class="w-full h-full object-cover object-center lg:object-top-33 sm:object-top-50 "
        />
      </a>
      <slot >
    </div>
  )
}
  <div id="description " class=" sm:w-2/3 flex flex-col justify-start align-self-center space-y-4 mb-6" >
    <h2 class="font-josefin font-bold text-2xl capitalize " >{title}</h2>
    <p class="font-jost normal-case line-clamp-3 text-base">{description}</p>
    <p class="font-jost text-sm">Published on {publishedDate} </p>   
    <a
      href={url}
      class="prose prose-slate dark:prose-invert space-x-4 no-underline font-jost normal-case mt-8 max-w-max max-h-max flex flex-row items-center flex-shrink-0"
    >
      <p class="text-base fade-effect">See more</p>
      <svg 
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 mb-[17px] fade-effect"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
    </a>
    <slot />
  </div>
</div>

<style>
.fade-effect {
  transition: opacity 0.5s ease-in-out;
  opacity: 1;
}

.fade-effect:hover {
  opacity: 0.5;
}
</style>