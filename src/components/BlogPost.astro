---
const { title, url, image, description } = Astro.props;
import "@fontsource/sarabun";
import "@fontsource-variable/jost";
import "@fontsource-variable/josefin-sans";
---

<div class="flex flex-col sm:flex-row lg:space-x-14 lg:mb-14 gap-6 lg:justify-center">
  {
    image && (
      <div id="image" class="flex w-full sm:w-1/3 relative h-[360px]">
        <img
          src={image}
          class="absolute inset-0 w-full h-full object-cover lg:object-top-33 sm:object-top-50"
        />
      </div>
    )
  }
  <div id="description " class="w-full sm:w-2/3 flex flex-col justify-start align-self-center">
    <h2 class="font-josefin font-bold">{title}</h2>
    <p class="font-jost normal-case line-clamp-3">{description}</p>
    <a
      href={url}
      class="prose prose-slate dark:prose-invert space-x-4 no-underline font-jost normal-case mt-8 max-w-max max-h-max flex flex-row items-center flex-shrink-0 transition duration-500 ease-in-out hover:text-blue-800"
    >
      <p>See more</p>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 mb-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
    </a>
    <slot />
  </div>
</div>
