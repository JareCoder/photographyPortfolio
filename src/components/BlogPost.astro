---
const { title, url, image, description } = Astro.props;
import Prose from "./Prose.astro";
import "@fontsource/sarabun";
import "@fontsource-variable/jost";
import "@fontsource-variable/josefin-sans";
---

<div class="flex flex-nowrap">
    <a class="prose prose-slate dark:prose-invert uppercase font-josefin no-underline"
      href={url}>
      <div class="w-1/3"><img src={image} /></div>
      <div class="w-2/3">
      <h3 class="font-josefin">{title}</h3>
      <p class="font-jost normal-case">{description}</p>
      </div>
    </a>
</div>
