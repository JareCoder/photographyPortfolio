---
const today = new Date();
import { Icon } from "astro-icon/components";
---

<footer
  class="md:flex md:justify-between md:items-center md:align-center font-overpass-mono w-full md:h-full mt-12"
>
  <div class="text-[12px] text-center items-center flex justify-center">
    &copy; {today.getFullYear()} Andreas Hartman. All rights reserved.
  </div>
  <div class="flex justify-center gap-3 m-2 sm:m-0">
    <a href="mailto:andreashartman@outlook.com" target="_blank">
      <span class="sr-only">Send Andreas an email</span>
      <Icon name="mdi:email-outline" class="h-[20px] w-[20px]" />
    </a>
    <a href="https://www.linkedin.com/in/andreas-hartman/" target="_blank">
      <span class="sr-only">Go to Andreas' LinkedIn Profile</span>
      <Icon name="mdi:linkedin" class="h-[20px] w-[20px]" />
    </a>
    <a href="https://www.instagram.com/andreashartman/" target="_blank">
      <span class="sr-only">Go to Andreas' Instragram Profile</span>
      <Icon name="mdi:instagram" class="h-[20px] w-[20px]" />
    </a>
    <a
      id="rss-link"
      href=""
      target="_blank"
      style="visibility: hidden; width: 0; height: 0;"
    >
      <span class="sr-only">Subscribe to RSS Feed</span>
      <Icon name="mdi:rss" class="h-[20px] w-[20px]" />
    </a>
  </div>
  <slot />
</footer>
<script src="../scripts/rss.js"></script>
