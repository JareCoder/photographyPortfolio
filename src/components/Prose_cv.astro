    prose-table:my-6 prose-table:w-full prose-table:border-collapse prose-table:shadow-sm
    prose-th:border prose-th:border-slate-300 dark:prose-th:border-slate-600 prose-th:px-4 prose-th:py-3 prose-th:bg-slate-100 dark:prose-th:bg-slate-700 prose-th:font-semibold
    prose-td:border prose-td:border-slate-300 dark:prose-td:border-slate-600 prose-td:px-4 prose-td:py-3
