    prose-headings:font-inconsolata
    prose-h1:text-3xl prose-h1:font-bold prose-h1:mb-6
    prose-h2:text-2xl prose-h2:font-semibold prose-h2:mt-10 prose-h2:mb-6 prose-h2:text-blue-800 dark:prose-h2:text-blue-400 prose-h2:pb-2 prose-h2:border-b prose-h2:border-slate-200 dark:prose-h2:border-slate-700
    prose-h3:text-xl prose-h3:font-medium prose-h3:mt-6 prose-h3:mb-3 prose-h3:text-blue-700 dark:prose-h3:text-blue-300
    prose-h4:text-lg prose-h4:font-medium prose-h4:mt-4 prose-h4:mb-2 prose-h4:text-blue-600 dark:prose-h4:text-slate-400
