---
import { Image } from "astro:assets";
let { images, alt, urls, tag } = Astro.props;
images = JSON.parse(images); // parse the JSON string back into an array
alt = alt ? JSON.parse(alt) : [];
urls = urls ? JSON.parse(urls) : [];
---
<div id="homepage" class="flex justify-center items-center" data-images={images} data-alt={alt} data-urls={urls} >
  <a>
    <Image
      id="randomHomePageImage"
      class="h-[440px] lg:h-[700px] xl:h-[1080px] object-cover object-center"
      src={images[0]}
      alt={alt[0]} 
      widths={[360, 720, 1080, 1440, 2160]}
      sizes={`(max-width: 360px) 360px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, (max-width: 2160px) 2160px`}
      width={2560}
      height={1440}
      decoding="async"
      format="avif"
    />
  </a>
   <slot />
</div>
<script src="../scripts/homePage.js" />