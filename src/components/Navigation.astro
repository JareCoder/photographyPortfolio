<style>
  /* nav styles */
  .nav-links {
    position: fixed;
    width: 300px;
    height: auto;
    right: -100%;
    padding: 10px;
    z-index: 10000;
  }
  .nav-links.collapsed {
    transform: translateX(100%);
    transition: 0.1s;
    right: 0;
    top: 0;
  }

  .nav-links.open {
    transform: translateX(0);
    transition: 0.1s;
    border-radius: 10px;
    right: 0;
    top: 0;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
  }

  .nav-links a {
    display: block;
    line-height: 50px;
    padding-left: 30px;
    box-sizing: border-box;
    font-size: 22px;
    text-decoration: none;
    height: auto;
  }

  html.dark .nav-links {
    background: rgb(34, 33, 37);
  }

  html:not(.dark) .nav-links {
    background: rgb(230, 230, 225);
  }
  .fade-effect {
    transition: opacity 0.5s ease-in-out;
    opacity: 1;
  }

  .fade-effect:hover {
    opacity: 0.5;
  }
  /* .nav-links a:hover,
.nav-links a:focus {
  background-color: #3e458a;
} */

  /* .expanded {
    display: unset;
  } */

  @media screen and (min-width: 636px) {
    .nav-links {
      /* margin-left: 5em; */
      display: flex;
      position: static;
      width: auto;
      background: none;
      justify-content: flex-start;
      gap: 20px;
      margin-top: 18px;
      margin-bottom: 18px;
    }

    .nav-links a {
      display: flex;
    }

    .hamburger {
      display: none;
    }
  }
</style>
